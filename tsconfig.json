{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",   // Output directory for compiled JS files
    "rootDir": "."        // Set root directory to the project root
  },
  "include": [
    "index.ts",          // Include root index.ts
    "src/**/*.ts"        // Include all .ts files in src folder
  ],
  "exclude": ["node_modules"]
}
